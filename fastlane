1. Create Gemfile on project root folder
#run on console
2. sudo bundle update
3. sudo bundle install
4. sudo bundle update fastlane
5. export LC_ALL=en_US.UTF-8  
6. export LANG=en_US.UTF-8
7. fastlane init (option 4 or manual)


#Fastfile
default_platform(:ios)

platform :ios do
  desc "Description of what the lane does"
  lane :devopstest_tienda do
   gym(scheme: "Full Build", export_method: "development")
  end
end









https://docs.fastlane.tools/
#To release your app in the App Store, all you have to do is
fastlane release
bundle exec fastlane release


default_platform(:ios)

platform :ios do
  desc "Description of what the lane does"
  lane :devopstest_tienda do
  	sync_code_signing
  	disable_automatic_code_signing(path: "BDMApplication.xcodeproj")
    build_app(
      export_method: "development",
      export_options: {
        provisioningProfiles: { 
          "mx.com.bancoazteca.devops" => "BAZDigitalMovilInHouseDevopsProfile",
          "mx.com.bancoazteca.devops.keyboard" => "BAZDigitalMovilInHouseDevopsKeyboardProfile",
          "mx.com.bancoazteca.devops.siri" => "BAZDigitalMovilInHouseDevopsSiriProfile"
      }
    }
  )
    enable_automatic_code_signing(path: "BDMApplication.xcodeproj")
  end
end


